{
  "default_title": "tb-color-picker.label",
  "name": "Sharp Color Picker",
  "permissions": [
    "tabs",
    "<all_urls>",
    "clipboardWrite",
    "storage",
    "notifications"
  ],
  "files": [
    "colorpicker.css",
    "colorpicker.js",
    "colorpicker.html",
    "pickerweb.js",
    "dropper.js",
    "dropper.css",
    "close.png",
    "back.png"
  ],
  "background": {
    "scripts": [
      "background.js",
      "files/colorpicker.js"
    ]
  },
  "used_strings": [
    "tbColorPickerCopied"
  ],
  "content_scripts": [
    {
      "js": [
        "files/dropper.js",
        "files/colorpicker.js"
      ],
      "css": [
        "files/dropper.css"
      ],
      "matches": [
        "<all_urls>"
      ],
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    "files/close.png"
  ],
  "amo_page": "https://addons.mozilla.org/addon/sharp-color-picker/",
  "download": "https://addons.mozilla.org/firefox/downloads/latest/sharp-color-picker/addon-601070-latest.xpi"
}