<groupbox>
	<caption label="&open-new-tab.label;" />
	<preferences>
		<preference id="{{pref_root}}always.new.tab" name="{{pref_root}}always.new.tab"
			type="bool"/>
	</preferences>
	<radiogroup preference="{{pref_root}}always.new.tab">
		<radio value="true" label="&open-new-tab.new;"/>
		<radio value="false" label="&open-new-tab.current;"/>
	</radiogroup>
</groupbox>