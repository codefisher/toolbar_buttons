settings.label:cog.png
<groupbox>
	<caption label="&clipboard.label;" />
	<preferences>
		<preference id="{{pref-root}}clipboard.open.mode" name="{{pref-root}}clipboard.open.mode"
			type="int"/>
	</preferences>
	<radiogroup preference="{{pref-root}}clipboard.open.mode">
		<radio value="0" label="&clipboard.currenttab;"/>
		<radio value="1" label="&clipboard.newtab;"/>
		<radio value="2" label="&clipboard.newwindow;"/>
	</radiogroup>
</groupbox>