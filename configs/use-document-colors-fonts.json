{
    "name": "Page Colors &amp; Fonts Buttons",
    "description": "Adds buttons to toggle the using the default page colors and fonts, and the page defined colors and fonts.",
    "icon": "page-white-color.png",
    "amo_page": "https://addons.mozilla.org/en-US/firefox/addon/page-colors-fonts-buttons/",
    "amo_download": "https://addons.mozilla.org/firefox/downloads/latest/621166/addon-621166-latest.xpi",
    "download_link": "https://codefisher.org/static/xpi/page_colors_fonts_buttons-1.1.3-sm-tb-fx.xpi",

    "buttons": [
        "use-document-colors", "use-document-fonts"
    ],
    "extension_id": "use-document-colors-fonts-single@codefisher.org",
    "add_to_main_toolbar": [
        "use-document-colors", "use-document-fonts"
    ],
    "menuitems": ["use-document-colors", "use-document-fonts", "min-font-size"],
    "menu_placement": null,
    "use_keyboard_shortcuts": true,
    "menu_meta": ["page-fonts-colors-menu", "tb-page-fonts-colors.menu", ["view", "context"]],
    "file_to_menu": {
        "view": {
            "browser": ["menu_viewPopup", "pageStyleMenu"],
            "suite_browser": ["menu_View_Popup", "menu_UseStyleSheet"],
            "mail": ["menu_View_Popup", "viewBodyMenu"],
            "read": ["menu_View_Popup", "viewBodyMenu"],
            "setting_label": "tb-show-a-menu-view.option.label"
        },
        "context": {
            "browser": ["contentAreaContextMenu", "context-viewinfo"],
            "setting_label": "tb-show-a-menu-context.option.label"
        }
    },
    "current_version_pref": "current.version.use-document-colors-fonts",
    "chrome_name": "use-document-colors-fonts-toolbar-button",
    "locale_file_prefix": "use-document-colors-fonts_"
}